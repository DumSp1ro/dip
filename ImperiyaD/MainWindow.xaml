<Window x:Class="ImperiyaD.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ImperiyaD"
        mc:Ignorable="d"
        Title="Империя Детства" MinHeight="800" MinWidth="940" MaxHeight="800" MaxWidth="940">
    <Grid Style="{StaticResource CustomGradient}">
        <Grid.RowDefinitions>
            <RowDefinition Height="100" ></RowDefinition>
            <RowDefinition Height="*" ></RowDefinition>
        </Grid.RowDefinitions>
        <Border Background="Silver" Grid.Row="0"/>
        <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="32" 
               FontFamily="Arial Black">Империя Детства</TextBlock>
        <Image Source="/res/logoid.png" Grid.Row="0" HorizontalAlignment="Left" 
           Height="100" Width="auto" />
        <StackPanel Grid.Row="0" HorizontalAlignment="Right" VerticalAlignment="Center">
            <Button Name="autobnt" Click="autorizacia" Style="{StaticResource ButtonAuto}" 
                Width="100" Height="25">Авторизация</Button>
        </StackPanel>
        <Frame Grid.Row="1" Name="MainFrame"></Frame>
    </Grid>
</Window>
